<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginStart="@dimen/margin_10dp"
    android:layout_marginEnd="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/margin_10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.zinoview.githubrepositories.ui.repositories.view.RepositoryNameTextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="Name"
          android:layout_marginStart="@dimen/margin_10dp"
          android:layout_marginTop="@dimen/margin_10dp"
          android:textStyle="bold"
          android:textColor="@android:color/black"
          android:textSize="@dimen/size_16sp"/>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="@dimen/margin_7dp">

          <com.zinoview.githubrepositories.ui.repositories.view.RepositoryLanguageTextView
              android:id="@+id/language"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="Language"
              android:layout_marginStart="@dimen/margin_10dp"
              android:layout_marginTop="@dimen/margin_10dp"
              android:textStyle="bold"
              android:textColor="@android:color/black"
              android:textSize="@dimen/size_12sp"
              android:layout_marginEnd="@dimen/margin_10dp"/>

          <com.zinoview.githubrepositories.ui.repositories.view.RepositoryLanguageColorImageView
              android:id="@+id/color_image"
              android:layout_width="15dp"
              android:layout_height="15dp"
              android:layout_gravity="bottom"
              tools:src="@drawable/ic_circle"
              tools:tint="@color/black"
              />
      </LinearLayout>

      <com.zinoview.githubrepositories.ui.core.view.GithubCollapseImageView
          android:id="@+id/collapse_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:tint="@color/black"
          tools:src="@drawable/ic_collapse"
          android:layout_gravity="end"
          />

      <com.zinoview.githubrepositories.ui.core.view.GithubLinearLayout
          android:id="@+id/sub_item"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="gone"
          tools:visibility="visible"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="@dimen/margin_10dp"
              android:layout_marginTop="@dimen/margin_10dp">

              <TextView
                  android:id="@+id/private_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/private_text"
                  android:textStyle="bold"
                  />


              <com.zinoview.githubrepositories.ui.repositories.view.RepositoryPrivateImageView
                  android:id="@+id/private_image"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  tools:src="@drawable/ic_private"
                  android:tint="@color/black"
                  android:layout_marginStart="@dimen/margin_10dp"
                  android:layout_marginTop="@dimen/margin_10dp"
                  android:layout_gravity="end"
                  android:layout_marginEnd="@dimen/margin_7dp"
                  android:layout_marginBottom="@dimen/margin_7dp"
                  />

          </LinearLayout>

          <com.zinoview.githubrepositories.ui.repositories.view.RepositoryDefaultBranchTextView
              android:id="@+id/default_branch_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:text="default branch: master"
              android:layout_marginStart="@dimen/margin_10dp"
              android:layout_marginBottom="@dimen/margin_10dp"
              />

      </com.zinoview.githubrepositories.ui.core.view.GithubLinearLayout>



  </LinearLayout>


</androidx.cardview.widget.CardView>